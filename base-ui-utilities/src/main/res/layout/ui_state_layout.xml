<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.achercasky.base.ui.views.NoConnectionView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ui_state_no_connection"
        android:visibility="invisible"/>

    <com.achercasky.base.ui.views.EmptyView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ui_state_empty"
        android:visibility="invisible"/>

    <com.achercasky.base.ui.views.ProgressAnimView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ui_state_progress"
        android:visibility="invisible"/>

</FrameLayout>